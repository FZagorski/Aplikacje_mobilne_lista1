<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pytanie 1/10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="-100dp"/>

   <ProgressBar
       android:id="@+id/progressBar"
       style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="10"
        android:progress="1" />

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:text="Pytanie"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp" />

    <RadioGroup
        android:id="@+id/answersRadioGroup"
        android:layout_width="289dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:background="#E3C7C7"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:background="#D19D9D"
            android:text="Odpowiedź 1"
            android:textSize="20sp" />

            <RadioButton
            android:id="@+id/answer2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="#D19D9D"
            android:text="Odpowiedź 2"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="#D19D9D"
            android:text="Odpowiedź 3"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:background="#D19D9D"
            android:text="Odpowiedź 4"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/nextQuestionButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Następne pytanie"
        android:layout_marginTop="30dp" />

</LinearLayout>
