<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pytanie"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <RadioGroup
        android:id="@+id/answersRadioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionTextView"
        android:layout_width="289dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:background="#E3C7C7">

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="#D19D9D"
            android:text="Odpowiedź 1"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="#D19D9D"
            android:text="Odpowiedź 2"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="#D19D9D"
            android:text="Odpowiedź 3"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="#D19D9D"
            android:text="Odpowiedź 4"
            android:layout_marginBottom="8dp" />

    </RadioGroup>

    <Button
        android:id="@+id/nextQuestionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/answersRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Następne pytanie"
        tools:layout_gravity="center"
        tools:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/questionCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pytanie 1/10"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="10"
        android:progress="1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/questionCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
